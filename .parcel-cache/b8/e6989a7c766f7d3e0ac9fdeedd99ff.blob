            <h2 class="heading--tertiary">Ingredients</h2>
            <div class="recipe-view__ingredients--details">
              <ul class="list-style">
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">150 g flour</span></li>
                
                <!--  -->
                <!-- TESTING PURPOSES -->
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">1.25 tsp yeast</span></li>
  
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">1.25 tsp yeast</span></li>
  
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">1.25 tsp yeast</span></li>
  
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">1.25 tsp yeast</span></li>
  
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">1.25 tsp yeast</span></li>
  
                <li><svg class="icon icon__cheveron-right">
                  <use xlink:href="1edc1cf09b92ead9acc0bdfd8d2bae4e"></use></svg><span class="recipe-view__element--text">1.25 tsp yeast</span></li>
              <!--  -->
              </ul>
            </div>
          </div>
          
          <div class="recipe-view__info--details">
            <svg class="icon icon__file--text">
