    <div class="modal-view">
      <div class="add-recipe-view">
        <svg class="icon icon__close-outline icon__close-form">
          <use xlink:href="b6565552fefc968dcf0a1b665d77d8ef"></use></svg>
        <h1 class=" heading--secondary u-marg-b-heading ">Add recipe</h1>
        <h2 class="heading--tertiary u-marg-b-heading">Recipe information</h2>

      <form class="add-recipe-view__form">
        
        <div class="add-recipe-view__form--information">
          
        <label for="title"> <svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Title</label>
        <input id="title" type="text" name="name" minlength="4" maxlength="45" placeholder="e.g: Baked chicken wings" required=""><br><br>

        <label for="publisher"><svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Publisher</label>
        <input id="publisher" name="added_by" type="text" maxlength="20" placeholder="e.g: John Doe"><br><br>

        <label for="category"><svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Category</label>
        <div class="category-select">
          <select id="category" name="category" required="">
            <option value="Breakfast">Breakfast</option>
            <option value="Main Dish">Main Dish</option>
            <option value="Side Dish">Side Dish</option>
            <option value="Salad">Salad</option>
          </select>
        </div>  
      </div>
      <div class="add-recipe-view__form--information">
        <label for="prep_time"><svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Preparation Time</label>
        <input id="prep_time" name="prep_time" type="text" maxlength="15" placeholder="e.g: 30 mins"><br><br>
      
        <label for="cooking_time"><svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Cooking Time</label>
        <input id="cooking_time" name="cooking_time" type="text" maxlength="15" placeholder="e.g: 45 mins"><br><br>
      
      
        <label for="servings"><svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Servings</label>
        <input id="servings" name="servings" type="text" maxlength="15" placeholder="e.g: 4"><br><br>
             
      </div>
   

        
      <div class="add-recipe-view__form--details">
        <label for="ingredients"><svg class="icon icon__compose">
          <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Ingredients</label>
        <textarea id="ingredients" name="ingredients" placeholder="use this format: quantity unit ingredient,quantity unit ingredient..." required=""></textarea>
      </div>
        <div class="add-recipe-view__form--details">
          <label for="directions"><svg class="icon icon__compose">
            <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>Directions</label>
          <textarea id="directions" name="directions" placeholder="use this format: quantity unit ingredient,quantity unit ingredient..." required=""></textarea>
        </div>

          <div class="add-recipe-view__form--information">
            <label for="url"><svg class="icon icon__compose">
              <use xlink:href="aceac693b269c0fda3a40f2fc5b66a83"></use></svg>URL</label>
            <input id="url" type="url" placeholder="e.g: JohnDoe.com/recipes/chicken-wings"><br><br>
          </div>
        <div class="add-recipe-view__form--btn">
          <button class="btn btn--form"><span class="underline">Submit &rarr;</span></button> 
        </div>
        
      </form>
    </div>
